<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
        x:Class="MAUIRecipeApp.View.UserView.EditFoodRecipeView"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
        xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
        xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
        xmlns:models="clr-namespace:MAUIRecipeApp.Models"
        xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
        xmlns:viewmodel="clr-namespace:MAUIRecipeApp.ViewModel.UserView"
        Title="EditFoodRecipeView">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Recipe ID-->
            <Label Text="Recipe ID" />
            <Picker ItemsSource="{Binding AllFoodRecipes}"
                    SelectedItem="{Binding SelectedFoodRecipe}"
                    ItemDisplayBinding="{Binding RecipeName}" />
            <Button Text="Edit Recipe"
                    Command="{Binding TestCommand}" />


            <!-- Recipe Name -->
            <Label Text="Recipe Name" />
            <Entry Text="{Binding RecipeName}" Placeholder="Enter recipe name" />

            <!-- Calories -->
            <Label Text="Calories" />
            <Entry Text="{Binding Calories}" Placeholder="Enter calories" Keyboard="Numeric" />

            <!-- Cooking Time -->
            <Label Text="Cooking Time (minutes)" />
            <Entry Text="{Binding CookingTime}" Placeholder="Enter cooking time" Keyboard="Numeric" />

            <!-- Difficulty Level -->
            <Label Text="Difficulty" />
            <Picker SelectedIndex="{Binding Difficulty}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Easy</x:String>
                        <x:String>Medium</x:String>
                        <x:String>Hard</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Portion -->
            <Label Text="Portion" />
            <Entry Text="{Binding Portion}" Placeholder="Enter portion size" Keyboard="Numeric" />

            <!-- Food Type -->
            <Label Text="Food Type" />
            <Picker ItemsSource="{Binding FoodRecipeTypes}" 
                        SelectedItem="{Binding SelectedFoodType}"
                        ItemDisplayBinding="{Binding FoodTypeName}" />

            <!-- Image URL -->
            <Label Text="Image URL" />
            <Entry Text="{Binding ImageUrl}" Placeholder="Enter image URL" />

            <!-- Video URL -->
            <Label Text="Video URL" />
            <Entry Text="{Binding VideoUrl}" Placeholder="Enter video URL" />

            <!-- Ingredients --> 
            <Label Text="Ingredients" />
            <!-- Add Ingredient -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Picker Grid.Column="0"
                        ItemsSource="{Binding Ingredients}"
                        SelectedItem="{Binding SelectedIngredient}"
                        ItemDisplayBinding="{Binding IngredientName}" />
                <Entry Grid.Column="1"
                       Placeholder="Quantity"
                       Text="{Binding Quantity}" 
                       Keyboard="Numeric" />
            </Grid>
            <Button Text="Add" Command="{Binding AddIngredientCommand}" />
            
            <CollectionView ItemsSource="{Binding IngredientInfosList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:IngredientInfos">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Name}" />
                                <Label Text="{Binding Quantity}" />
                                <Label Text="{Binding Unit}" />
                            </HorizontalStackLayout>
                            <Button Grid.Column="1"
                                Text="Remove"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:EditFoodRecipeViewModel}}, Path=RemoveIngredientCommand}"
                                    CommandParameter="{Binding .}" />
                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



            <!-- Submit Button -->
            <Button Text="Save Changes"
                        Command="{Binding SubmitCommand}"
                        IsEnabled="{Binding IsSubmitEnabled}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>