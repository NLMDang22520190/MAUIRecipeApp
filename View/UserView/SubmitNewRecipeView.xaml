<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIRecipeApp.View.UserView.SubmitNewRecipeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:models="clr-namespace:MAUIRecipeApp.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:MAUIRecipeApp.ViewModel.UserView"
    Title="Submit New Recipe"
    x:DataType="viewmodel:SubmitNewRecipeViewModel">

    <!-- ViewModel Binding -->
    <ContentPage.BindingContext>
        <viewmodel:SubmitNewRecipeViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Header -->
            <Label Text="Recipe Information Form"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Text="Share your recipe details with us"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center" />
            <Label Text="Step 1/2" HorizontalOptions="Center" />

            <!-- Recipe Name -->
            <Label Text="Name" />
            <Entry Text="{Binding RecipeName}" Placeholder="Enter the name of the dish" />

            <!-- Calories -->
            <Label Text="Calories" />
            <Entry Text="{Binding Calories}" Placeholder="Enter calorie count" Keyboard="Numeric" />
            
            <!-- Health Benefit-->
            <Label Text="Health Benefit" />
            <Entry Text="{Binding HealthBenefit}" Placeholder="Enter health benefit" />

            <!-- Cooking Time -->
            <Label Text="Cooking Time (minutes)" />
            <Entry Text="{Binding CookingTime}" Placeholder="Enter cooking time" Keyboard="Numeric" />

            <!-- Difficulty Slider -->
            <Label Text="Difficulty" />
            <Slider x:Name="DifficultySlider"
                    Minimum="0" 
                    Maximum="2" 
                    Value="{Binding Difficulty, Mode=TwoWay}" />
            <Grid ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="Easy" Grid.Column="0" HorizontalOptions="Start" />
                <Label Text="Medium" Grid.Column="1" HorizontalOptions="Center" />
                <Label Text="Hard" Grid.Column="2" HorizontalOptions="End" />
            </Grid>

            <!-- Portion -->
            <Label Text="Portion" />
            <Entry Text="{Binding Portion}" Placeholder="Enter the number of portions" Keyboard="Numeric" />

            <!-- Food Type -->
            <Label Text="Food Type" />
            <Picker ItemsSource="{Binding FoodRecipeTypes}" 
                    ItemDisplayBinding="{Binding FoodTypeName}" 
                    SelectedItem="{Binding SelectedFoodType}" />

            <!-- Ingredients Picker -->
            <Label Text="Select Ingredient" />
            <Grid ColumnSpacing="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Picker Grid.Column="0" ItemsSource="{Binding Ingredients}" 
                        ItemDisplayBinding="{Binding IngredientName}" 
                        SelectedItem="{Binding SelectedIngredient}" />
                <Entry Grid.Column="1" Text="{Binding IngredientQuantity, Mode=TwoWay}" 
                       Placeholder="Enter the quantity" Keyboard="Numeric" />
            </Grid>

            <Button Text="Add Ingredient" 
                    BackgroundColor="Orange" 
                    TextColor="White" 
                    Command="{Binding AddIngredientCommand}" />

            <!-- Display Selected Ingredients -->
            <Label Text="Selected Ingredients" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding IngredientsWithNames}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:IngredientInfos">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Quantity}" />
                            <Button Text="Remove"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SubmitNewRecipeViewModel}}, Path=RemoveIngredientCommand}"
                                    CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Image URL -->
            <Label Text="Image URL" />
            <Entry Text="{Binding ImageUrl}" Placeholder="Enter the URL of the image" />

            <!-- Video URL -->
            <Label Text="Video URL" />
            <Entry Text="{Binding VideoUrl}" Placeholder="Enter the URL of the video" />

            <!-- Submit Button -->
            <Button Text="Submit Recipe" 
                    BackgroundColor="Orange" 
                    TextColor="White" 
                    Command="{Binding SubmitRecipeCommand}" 
                    IsEnabled="{Binding IsSubmitEnabled}" />

            <!-- Back to Edit Ingredients Screen -->
            <Button Text="Back to Ingredients" 
                    BackgroundColor="Gray" 
                    TextColor="White" 
                    Command="{Binding MoveToEditIngredientCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
