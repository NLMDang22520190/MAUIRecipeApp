<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIRecipeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:AdminView="clr-namespace:MAUIRecipeApp.View.AdminView"
    xmlns:Auth="clr-namespace:MAUIRecipeApp.View.Auth"
    xmlns:UserView="clr-namespace:MAUIRecipeApp.View.UserView"
    xmlns:View="clr-namespace:MAUIRecipeApp.View"
    xmlns:local="clr-namespace:MAUIRecipeApp"
    Title="MAUIRecipeApp"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate View:StartUpPageView}" Route="startup" />
    <ShellContent ContentTemplate="{DataTemplate Auth:LoginPageView}" Route="login" />
    <ShellContent ContentTemplate="{DataTemplate Auth:SignUpPageView}" Route="signup" />
    <ShellContent ContentTemplate="{DataTemplate Auth:PasswordRecoveryPageView}" Route="forgotpass" />
    <ShellContent ContentTemplate="{DataTemplate Auth:PasswordVerifyCodePageView}" Route="passwordcode" />
    <ShellContent ContentTemplate="{DataTemplate Auth:VerifyCodePageView}" Route="verifycode" />
    <ShellContent ContentTemplate="{DataTemplate Auth:NewPasswordPageView}" Route="newpassword" />
    <ShellContent ContentTemplate="{DataTemplate UserView:HomePageView}" Route="home" />
    <ShellContent ContentTemplate="{DataTemplate AdminView:BackDropMainPageView}" Route="adminhome" />



</Shell>
